# Dockerfile.frontend - avec conf nginx propre
FROM node:20-alpine as builder

WORKDIR /app
COPY package*.json ./
RUN npm ci

COPY src/ ./src/
COPY public/ ./public/
COPY index.html ./
COPY vite.config.js ./

RUN npm run build

# -- Étape Nginx --
FROM nginx:alpine

# ✅ Copier la conf vers le bon chemin attendu
COPY default.conf /etc/nginx/conf.d/default.conf

# Copier les fichiers buildés
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
