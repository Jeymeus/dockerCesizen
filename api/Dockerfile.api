FROM node:20-alpine

# Installer les dépendances nécessaires pour bcrypt
RUN apk add --no-cache python3 make g++

WORKDIR /app

# Copier les dépendances
COPY package*.json ./
RUN npm ci --only=production

# Copier le code (depuis le contexte api/)
COPY . ./

# Exposer le port
EXPOSE 3000

# Démarrer l'API
CMD ["node", "server.js"]